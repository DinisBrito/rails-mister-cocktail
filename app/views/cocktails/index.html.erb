<div class="row justify-content-between mb-4">
  <h1>List of Cocktails</h1>
    <%= link_to 'New Cocktail', new_cocktail_path, class:"btn btn-success" %>
</div>

<div class="row mb-2">
  <% @cocktails.each do |cocktail|  %>
    <div class="col-3">
      <div class="card mb-6 text-center">
        <%= link_to cocktail.name , cocktail %>
      </div>
    </div>
  <% end %>
</div>
