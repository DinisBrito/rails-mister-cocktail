<h1>List of Cocktails</h1>

<div>
  <%= link_to 'New Cocktail', new_cocktail_path, class:"btn btn-success" %>
</div>

<div class="row">
  <% @cocktails.each do |cocktail|  %>
    <div class="col-4">
      <div class="card mb-4">
        <%= link_to cocktail.name , cocktail %>
      </div>
    </div>
  <% end %>
</div>
